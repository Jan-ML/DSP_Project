<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="#152238">


    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="50dp"
        android:hint="@string/select_occurred_year"
        android:theme="@style/Theme.MaterialComponents.Bridge"
        app:endIconTint="#B78428"
        app:hintTextColor="#B78428"
        android:layout_marginStart="10dp">

        <AutoCompleteTextView
            android:id="@+id/auto_complete_current_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:popupBackground="#FFFFFF"
            android:textColor="#FFFFFF"
            android:textColorHint="#B78428"
            android:textSize="18sp"
            android:theme="@style/Autocomplete"
            tools:ignore="LabelFor,SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox.ExposedDropdownMenu"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="195dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="50dp"
        android:hint="@string/select_year"
        android:theme="@style/Theme.MaterialComponents.Bridge"
        app:endIconTint="#B78428"
        app:hintTextColor="#B78428"
        android:layout_marginStart="195dp">

        <AutoCompleteTextView
            android:id="@+id/auto_complete_predicted_year"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="none"
            android:popupBackground="#FFFFFF"
            android:textColor="#FFFFFF"
            android:textColorHint="#B78428"
            android:textSize="18sp"
            android:theme="@style/Autocomplete"
            tools:ignore="LabelFor,SpeakableTextPresentCheck" />

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/show_comparison"
        android:layout_width="180dp"
        android:layout_height="70dp"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="195dp"
        android:backgroundTint="#B78428"
        android:text="Show Comparison"
        android:textSize="18sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginStart="195dp" />

</RelativeLayout>